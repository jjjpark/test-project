	<select id="getUserInfo" resultType="UserDto">
		select lolId, pw, id from user where id = #{id}
		<!-- u_name만 하면 서버에서 넘길 때 name정보만 나오고 id,pw는 안나온다. -->
	</select>

	<insert id="join" parameterType="UserDto">
		insert into user(id, pw, lolId)
		values(#{id}, #{pw}, #{lolId})
	</insert>

	<select id="userInfo" resultType="UserDto">
		select * from user
	</select>
</mapper>
